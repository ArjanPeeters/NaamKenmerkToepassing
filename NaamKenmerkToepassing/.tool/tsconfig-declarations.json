{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "allowJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "outDir": "temp/types",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/test"
  ]
}
